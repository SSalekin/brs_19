<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t ".add_comment" %></h3>
  </div>
  <div class="panel-body">
    <%= form_for [@review, @comment] do |f| %>
      <%= f.hidden_field :review_id, value: @review.id %>
      <%= f.text_field :content, placeholder: t(".new_comment"),
        class: "comment_box form-control" %>

      <%= f.submit t(".comment"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>