<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:home_head), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>

          <% if current_user.admin? %>
            <%= render "layouts/admin_header" %>
          <% else %>
            <%= render "layouts/user_header" %>
          <% end %>
          <li class="dropdown">
            <%= link_to  "#", class: "dropdown-toggle", data: {toggle: "dropdown"},
              role: "button", aria: {haspopup: "true", expanded: "false"} do %>
              <%= t ".settings" %> <span class="caret"></span>
            <% end %>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t(".update_profile"), edit_user_path(current_user) %>
              </li>
              <li>
                <%= link_to t(".logout"), :destroy_user_session, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".sign_in"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
