<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t ".add_review" %></h3>
  </div>
  <div class="panel-body">
    <%= form_for [@book, @review] do |f| %>
      <div class="form-group<%= get_error_class @review, :content %>">
        <%= f.label :content %>
        <%= f.text_area :content, class: "form-control" %>
        <%= raw get_error_message @review, :content %>
      </div>
      <div class="form-group">
        <%= f.label :rating %>
        <%= f.hidden_field :rating, id: "rating_review" %>
        <div id="rating_for_review" ></div>
      </div>
      <%= f.hidden_field :book_id, value: @book.id %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <center><%= f.submit t(".submit"), class: "btn btn-primary" %></center>
    <% end %>
  </div>
</div>